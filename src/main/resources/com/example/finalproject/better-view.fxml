<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.finalproject.BetterView" stylesheets="/com/example/finalproject/styles.css">
    <GridPane layoutX="20" layoutY="20" vgap="5" hgap="5" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0" AnchorPane.bottomAnchor="50.0">
        <!-- Title -->
        <VBox fx:id="defaultFieldsContainer" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2" spacing="5">
            <!-- Default Fields - Always Visible -->
            <Label text="Expanded Item View:" style="-fx-font-weight: bold; -fx-text-fill: #333; -fx-font-size: 16px;" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="1" prefWidth="300"/>

            <Label text="Quantity:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <TextField fx:id="quantityField" GridPane.columnIndex="1" GridPane.rowIndex="2" prefWidth="300"/>

            <Label text="Price:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
            <TextField fx:id="priceField" GridPane.columnIndex="1" GridPane.rowIndex="3" prefWidth="300"/>

            <Label text="Description:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
            <TextField fx:id="descriptionField" GridPane.columnIndex="1" GridPane.rowIndex="4" prefWidth="300"/>
        </VBox>
        <!-- Book Fields Container -->
        <VBox fx:id="bookFieldsContainer" GridPane.columnIndex="0" GridPane.rowIndex="5" GridPane.columnSpan="2" visible="false" managed="false" spacing="5">
            <Label text="Custom Item Details:" style="-fx-font-weight: bold; -fx-text-fill: #333; -fx-font-size: 16px;" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <Label text="Author:"/>
            <TextField fx:id="authorField" prefWidth="300"/>
            <Label text="Publisher:"/>
            <TextField fx:id="publisherField" prefWidth="300"/>
            <Label text="Number of Pages:"/>
            <TextField fx:id="pagesField" prefWidth="300"/>
        </VBox>

        <!-- Electronics Fields Container -->
        <VBox fx:id="electronicsFieldsContainer" GridPane.columnIndex="0" GridPane.rowIndex="6" GridPane.columnSpan="2" visible="false" managed="false" spacing="5">
            <Label text="Custom Item Details:" style="-fx-font-weight: bold; -fx-text-fill: #333; -fx-font-size: 16px;" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <Label text="Brand:"/>
            <TextField fx:id="brandField" prefWidth="300"/>
            <Label text="Model ID:"/>
            <TextField fx:id="modelIdField" prefWidth="300"/>
            <Label text="Color:"/>
            <TextField fx:id="colorField" prefWidth="300"/>
            <Label text="Warranty Period:"/>
            <TextField fx:id="warrantyPeriodField" prefWidth="300"/>
        </VBox>

        <!-- Furniture Fields Container -->
        <VBox fx:id="furnitureFieldsContainer" GridPane.columnIndex="0" GridPane.rowIndex="7" GridPane.columnSpan="2" visible="false" managed="false" spacing="5">
            <Label text="Custom Item Details:" style="-fx-font-weight: bold; -fx-text-fill: #333; -fx-font-size: 16px;" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <Label text="Material:"/>
            <TextField fx:id="materialField" prefWidth="300"/>
            <Label text="Dimensions:"/>
            <TextField fx:id="dimensionsField" prefWidth="300"/>
        </VBox>

        <!-- Save Button -->
        <Button fx:id="saveButton" text="Save" GridPane.columnIndex="0" GridPane.rowIndex="8" GridPane.columnSpan="2" onAction="#onSaveButtonClick" styleClass="button"/>
    </GridPane>
</AnchorPane>
