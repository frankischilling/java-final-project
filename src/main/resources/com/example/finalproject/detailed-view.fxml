<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.finalproject.DetailedViewController"
      spacing="10" alignment="CENTER">

    <Text text="Detailed View"/>

    <TextField fx:id="idField" promptText="ID:"/>
    <TextField fx:id="nameField" promptText="Name:"/>
    <TextField fx:id="quantityField" promptText="Quantity:"/>
    <TextField fx:id="priceField" promptText="Price:"/>
    <TextField fx:id="descriptionField" promptText="Description:"/>
    <TextField fx:id="authorField" promptText="Author:"/>
    <TextField fx:id="publisherField" promptText="Publisher:"/>
    <TextField fx:id="pagesField" promptText="Pages:"/>
    <TextField fx:id="brandField" promptText="Brand:"/>
    <TextField fx:id="modelIdField" promptText="Model ID:"/>
    <TextField fx:id="colorField" promptText="Color:"/>
    <TextField fx:id="warrantyPeriodField" promptText="Warranty Period:"/>
    <TextField fx:id="materialField" promptText="Material:"/>
    <TextField fx:id="dimensionsField" promptText="Dimensions:"/>
    <Button fx:id="saveButton" text="Save" onAction="#onSaveButtonClick" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>

</VBox>